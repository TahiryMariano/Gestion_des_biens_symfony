{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Inscription</h1>
        {{ form_start(form) }}

        {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder':'nom d\'utilisateur...'}}) }}
        {{ form_row(form.email, {'label':'Adresse email','attr':{'placeholder':'utilisateur@symfony.com'}}) }}
        {{ form_row(form.password, {'label':'Mot de passe'}) }}
        {{ form_row(form.confirm_password, {'label':'confirmation du mot de passe'}) }}
            <button class="btn btn-success" type="submit">S'inscrire</button>
        {{ form_end(form) }}
    </div>
{% endblock %}