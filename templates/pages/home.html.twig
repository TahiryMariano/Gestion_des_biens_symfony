{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron text-center mt-50" style="background-color:rgba(225, 7, 7, 0.86); width:50%; color:white; margin:auto; margin-top:1em; border-radius:10px; ">
        <h1>GESTION DES BIENS IMMOBILIERS</h1>
    </div>

    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
        {% for property in properties %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('property.show', {id: property.id, slug: property.slug }) }}">{{ property.title }}</a>
                        </h5>
                        <p class="card-text">{{ property.city }} ({{ property.codepostal }})</p>
                        <div class="text-primary" style="font-weight:bold; font: size 2rem;" >{{ property.price |number_format(0, '', ' ') }}$</div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}

    
