<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Agence immobilière
			{% endblock %}
		</title>
		<link
		rel="icon" type="image/x-icon" href="{{ asset('logo/logo.png') }}"/>
		{# Run `composer require symfony/webpack-encore-bundle`and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light  shadow-lg">
			<div class="container px-4 px-lg-5">
				<a class="navbar-brand " href="{{ path('home') }}">
					<img src="{{ asset('logo/TahiryM2.png') }}" class="logo me-auto" style="margin-bottom: 0.5em;" alt="logo" class="img-fluid">
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a href="{{ path('home') }}" class="nav-link fw-bolder">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if current_menu is defined and current_menu=='properties' %}active{% endif %} fw-bolder" aria-current="page" href="{{ path('Property.index') }}">Acheter</a>
						</li>
						<li class="nav-item ms-lg-auto my-auto ms-3 ms-lg-0">
							<a href="{{ path('admin.property.index')}}" class="fw-bolder btn btn-md bg-gradient-primary btn-round mb-0 me-1 mt-2 mt-md-0">Admin</a>
						</li>
					</ul>
					{% if  app.user %}
						<ul class="navbar-nav">
							<li class="nav-item">
								<button class="btn btn-default">
									<a class="nav-link active" href="{{ path('security_logout') }}">Se déconnecter</a>
								</button>
							</li>
						</ul>
					{% endif %}
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}
		<!-- Footer-->
		<footer class="py-4 bg-primary">
			<div class="container">
				<p class="m-0 text-center text-white">Copyright &copy; All rights reserved 2021</p>
			</div>
		</footer>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
